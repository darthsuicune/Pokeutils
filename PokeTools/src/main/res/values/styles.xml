<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PokemonCard">
        <item name="android:padding">4dp</item>
    </style>
    <style name="PokemonCard.Name" parent="PokemonCard">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="PokemonCard.StatTextView" parent="PokemonCard">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PokemonCard.StatEditText" parent="PokemonCard.StatTextView">
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">3</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="PokemonCard.AttackSpinner">

    </style>

    <style name="PokemonCard.StatModifier" parent="PokemonCard.StatTextView">
        <item name="android:padding">2dp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AttackResults">
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawerText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="DrawerEntry" parent="DrawerText">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">72dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DrawerTitle" parent="DrawerEntry">
        <!-- 36 implies 54% transparency -->
        <item name="android:textColor">#36000000</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
</resources>
