<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attack_1_result"
        android:text="TEST"
        style="@style/AttackResults"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/attack_2_result"
        android:text="TEST"
        style="@style/AttackResults"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attack_3_result"
        android:layout_below="@+id/attack_1_result"
        android:text="TEST"
        style="@style/AttackResults"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/attack_2_result"
        android:id="@+id/attack_4_result"
        android:text="TEST"
        style="@style/AttackResults"/>
</RelativeLayout>