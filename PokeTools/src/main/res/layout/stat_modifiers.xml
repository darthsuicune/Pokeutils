<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="@string/modifiers"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_width="0dp"/>

    <Spinner
        style="@style/PokemonCard.StatModifier"
        android:id="@+id/attack_modifier"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>

    <Spinner
        style="@style/PokemonCard.StatModifier"
        android:id="@+id/defense_modifier"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>

    <Spinner
        style="@style/PokemonCard.StatModifier"
        android:id="@+id/special_attack_modifier"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>

    <Spinner
        style="@style/PokemonCard.StatModifier"
        android:id="@+id/special_defense_modifier"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>

    <Spinner
        style="@style/PokemonCard.StatModifier"
        android:id="@+id/speed_modifier"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"/>
</LinearLayout>