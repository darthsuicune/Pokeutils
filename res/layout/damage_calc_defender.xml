<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" >

    <TableRow>

        <AutoCompleteTextView
            android:id="@+id/damage_calc_pokemon_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/damage_calc_pokemon_2"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />

        <Spinner
            android:id="@+id/damage_calc_defense_modifier"
            android:entries="@array/damage_modifiers" />
    </TableRow>

    <!-- Defender stats -->

    <TableRow>

        <EditText
            android:id="@+id/damage_calc_defender_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hp" >
        </EditText>

        <EditText
            android:id="@+id/damage_calc_defender_def"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/att" >
        </EditText>

        <EditText
            android:id="@+id/damage_calc_defender_sp_def"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/sp_att" >
        </EditText>

        <EditText
            android:id="@+id/damage_calc_defender_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/speed" >
        </EditText>
    </TableRow>

    <!-- Defender modifiers -->

</TableLayout>